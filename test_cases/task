#include <stdlib.h>
#include <stdarg.h>

/**
 * _printf: takes an argument and prints to the standard output
 * considering only the %,c and s specifiers
 * dest[i]: pointer pointing to the address of the new string.
 * format[i]: pointer to the source string.
 */
 
 int _printf(const char *format, ...)
 {
     va_list ls;
     int i=0;
     int j=0;
     char *dest;
     
     dest = malloc(sizeof(char)* 1000);
     
     if (dest == NULL)
         return(1);
         
     va_start (ls,format)
     while (format[i] !='0')
     {
         if(format[i] == '%')
           {
                 i++;
           }
             if (format[i] == 'c' || 's')
               {
                   dest[j] = (char)va_arg(ls,int)
                 j++;
               }
           else
               {
                   dest[j]=format[i]
                   j++; 
                }
                i++;
     }
     write(1,dest,i++);
     free(dest);
     return(i);
}
